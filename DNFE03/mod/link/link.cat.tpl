<table class="cats">
<tbody>
    <tr class="cat-head">
        <td>&nbsp;</td><td>{cd}</td><td class="ac">{all_col}</td>
    </tr>
    {linkprint}
    <!--buffer:rows:0-->
    <tr class="cat-body">
        <td class="ac cat-icon">{icon}&nbsp;</td>
        <td class="al cat-title">{title}{desc}<br />{sub}</td>
        <td class="ac va cat-total">{total}</td>
    </tr>
    <!--buffer-->
    <tr class="cat-info">
        <td colspan="3" class="ar"><em>{all_alls}: {alltotal}, {all_cats}: {allcat}, {link_hits}: {allhits}, {link_trans}: {alltrans}</em></td>
    </tr> 
</tbody>
</table>
